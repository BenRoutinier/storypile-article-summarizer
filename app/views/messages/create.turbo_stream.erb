<% if @conversation.title_previously_changed? %>
  <%= turbo_stream.update "conversation_title", @conversation.title %>
<% end %>

<%= turbo_stream.append "messages" do %>
  <%= render "messages/messages", messages: [@message, @assistant_message].compact %>
<% end %>

<%= turbo_stream.update "new_message_container" do %>
  <%= render "messages/form", conversation: @conversation, message: Message.new %>
<% end %>

<%#= turbo_stream.invoke "document.querySelector('#new_message_container').reset()"%>
