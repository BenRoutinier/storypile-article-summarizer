<!DOCTYPE html>
<html>
  <head>
    <title><%= default_meta["meta_title"] %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Open Graph meta tags -->
    <meta property="og:title" content="<%= default_meta["meta_title"] %>">
    <meta property="og:description" content="<%= default_meta["meta_description"] %>">
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= root_url %>">
    <meta property="og:image" content="<%= image_url(default_meta["meta_image"]) %>">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= favicon_link_tag asset_path('storypilelogo-sq.png') %>
    <link rel="manifest" href="<%= asset_path 'manifest.json' %>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Google+Sans+Flex:opsz,wght@6..144,1..1000&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= render 'shared/ios_pwa_links' %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>" data-controller="sync offline-indicator">
    <%= render "shared/navbar" %>
    <%= render "shared/offline_banner" %>

    <%= yield %>

    <%= render "shared/flashes" %>

    <% if user_signed_in? %>
      <%= render "shared/mobile_footer" %>
    <% end %>

  </body>
</html>
