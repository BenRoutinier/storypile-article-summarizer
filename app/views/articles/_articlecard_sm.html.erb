<% curation ||= nil %>
<div class="card h-100 shadow-sm position-relative">
  <div class="row g-0 align-items-center flex-nowrap">

    <div class="col overflow-hidden">
      <%= link_to article_path(article), class: "text-decoration-none text-reset" do %>
        <div class="p-2 pb-5">
          <h6 class="card-title mb-1" style="display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden;">
            <%= article.headline %>
          </h6>
          <small class="text-muted"><%= article.created_at.strftime("%B %d, %Y") %></small>
        </div>
      <% end %>
    </div>

    <div class="col-auto d-flex flex-column align-items-end p-2 flex-shrink-0">
      <div class="position-relative" style="width: 120px; aspect-ratio: 2/1; overflow: hidden;">
        <% if article.image_link.present? %>
          <%= image_tag article.image_link, class: "w-100 h-100 object-fit-cover rounded" %>
        <% else %>
          <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center rounded">
            <i class="fa-solid fa-newspaper text-muted"></i>
          </div>
        <% end %>
      </div>

      <div class="d-flex gap-2 pt-2 mt-1">
        <% if curation %>
          <% bookmark = Bookmark.find_by(article_id: article.id, curation_id: curation.id) %>
          <%= render 'shared/buttons/button_remove_from_curation', bookmark: bookmark %>
        <% else %>
          <span data-offline-hide class="position-absolute bottom-0 start-0 m-2">
            <%= render 'shared/buttons/button_favourite', article: article %>
          </span>
          <span data-offline-hide class="d-flex gap-2">
            <%= render 'shared/buttons/button_archive', article: article %>
            <%= render partial: 'shared/buttons/button_delete', locals: { path: article_path(article), confirm: 'Delete this article?' } %>
          </span>
          <span class="d-none text-muted small" data-offline-show>
            <i class="fa-solid fa-cloud-slash me-1"></i> Offline
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
