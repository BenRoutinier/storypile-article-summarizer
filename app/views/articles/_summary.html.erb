<%= turbo_frame_tag "article_summary" do %>
  <div class="card mb-4">
    <div class="card-body bg-white">
      <h5 class="card-title">AI Summary</h5>
      <p class="card-text"><%= simple_format(article.summary) %></p>

      <hr>

      <div class="d-flex gap-2 align-items-center">
        <div class="dropdown flex-shrink-0">
          <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= article.summary_prompt&.name || "None" %>
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li>
              <%= button_to "None",
                    update_summary_prompt_article_path(article, summary_prompt_id: nil),
                    method: :patch,
                    class: "dropdown-item #{'active' if article.summary_prompt_id.nil?}" %>
            </li>
            <% current_user.summary_prompts.each do |prompt| %>
              <li>
                <%= button_to prompt.name,
                      update_summary_prompt_article_path(article, summary_prompt_id: prompt.id),
                      method: :patch,
                      class: "dropdown-item #{'active' if article.summary_prompt_id == prompt.id}" %>
              </li>
            <% end %>
          </ul>
        </div>

        <%= form_with url: regenerate_summary_article_path(article), method: :post, class: "d-flex flex-grow-1 gap-2", style: "min-width: 0;" do |f| %>
          <%= f.text_field :extra_instructions, class: "form-control form-control-sm w-100", placeholder: "Additional one-time instructions (optional)" %>
          <%= f.submit "Regenerate", class: "btn btn-primary btn-sm flex-shrink-0" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
