  <h1 class="mb-3"><%= article.headline %></h1>

  <% if article.link.present? %>
    <%
      host = URI.parse(article.link).host rescue "Source"
      domain = host
    %>

    <%= link_to domain,
          article.link,
          target: "_blank",
          rel: "noopener",
          class: "btn btn-secondary mb-3" %>
  <% end %>

  <% if article.summary.present? %>
    <%= render "articles/summary", article: article %>
  <% end %>
