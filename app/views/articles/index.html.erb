<div class="container my-4">
  <h1 class="text-center mb-4">My summary prompts</h1>
  <div class="row">

    <div class="col-12 col-md-4" >
      <div class="card mb-4" style ="position: sticky">
        <div class="card-body">
          <h5 class="card-title" >Add a New Article</h5>
          <%= render "form", article: Article.new %>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-8">
      <div class="row g-3">
        <% @articles.each do |article| %>
          <%= render "articlecard", article: article %>
        <% end %>
      </div>
    </div>
  </div>
</div>
