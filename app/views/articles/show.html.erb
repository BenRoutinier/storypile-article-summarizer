<div class="container my-4">

  <%= link_to "â† Back", articles_path, class: "btn btn-secondary mb-3" %>
  <span data-offline-hide>
    <%= link_to "ChatBot", conversation_path(@article.conversations.first), class: "btn btn-primary mb-3" %>
  </span>

  <%= render layout: "articles/article_head", locals: { article: @article } do %>

    <!-- Speech Reader Toggle Wrapper -->
    <div data-controller="toggle-form">

      <div data-toggle-form-target="form" class="d-none">
        <%= render "articles/speech_reader", article: @article %>
      </div>

      <div class="card">
        <div class="card-body bg-white">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="card-title mb-0">Full Article</h5>
            <button type="button"
                    class="btn btn-outline-primary btn-sm"
                    data-toggle-form-target="display"
                    data-action="toggle-form#toggle"
                    title="Listen to article">
              <i class="fa-solid fa-headphones me-1"></i> Listen
            </button>
          </div>
          <%= simple_format(@article.body) %>
        </div>
      </div>

    </div>

  <% end %>

</div>
