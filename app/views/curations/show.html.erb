<div class="container my-4">
  <%= link_to "← Back to Articles", articles_path, class: "btn btn-secondary mb-3" %>
  <%= link_to "← Back to Curations", curations_path, class: "btn btn-secondary mb-3" %>

  <h1><%= @curation.title %></h1>

  <div class="row g-3">
    <%= render "shared/manyarticles", articles: @articles, curation: @curation %>
  </div>

  <% if @articles.empty? %>
    <p class="text-center text-muted">No articles in this curation yet.</p>
  <% end %>

  <div class="mt-4">
    <%= link_to "Back to Curations", curations_path, class: "btn btn-secondary" %>
    <%= link_to "Back to All Articles", articles_path, class: "btn btn-secondary" %>
  </div>
</div>
