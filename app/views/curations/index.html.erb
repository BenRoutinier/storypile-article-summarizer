<div class="container my-4">
  <h1 class="text-center mb-4">My Curations</h1>
  <div class="row d-flex">

    <div class="col-12 col-md-4" style ="position: sticky; top: 20px; z-index: 10; align-self: flex-start;" >
      <div class="card mb-4">
        <div class="card-body bg-white">
          <h5 class="card-title" >Add a New Curation</h5>
          <%= render "form", curation: Curation.new %>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-8">
      <div class="row g-3">
        <% @curations.each do |curation| %>
          <%= render "curationcard", curation: curation %>
        <% end %>
      </div>
    </div>
  </div>
</div>
