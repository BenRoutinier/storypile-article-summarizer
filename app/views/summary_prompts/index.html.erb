<div class="container my-4">
  <h1 class="text-center mb-4">My summary prompts</h1>

  <div class="row">
    <div class="col-12 col-md-4" >
      <div class="card mb-4" style ="position: sticky">
        <div class="card-body">
          <h5 class="card-title" >Add a New Custom Summary Prompt</h5>
          <%= render "form", summary_prompt: SummaryPrompt.new %>
        </div>
      </div>
    </div>

<div class="col-12 col-md-8">
    <div class="row g-3">
      <% if @summary_prompts.any? %>
        <% @summary_prompts.each do |summary_prompt| %>
        <div class="card mb-3 p-3 shadow-sm">
          <h3><%= summary_prompt.name %></h3>
          <p><%= summary_prompt.content %></p>
            <%= link_to "Delete prompt",
                        summary_prompt_path(summary_prompt),
                        data: {
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure?"
                        },
                        class: "btn btn-sm btn-outline-danger mt-2" %>
          </div>
          <% end %>
      <% else %>
        <p>No summary prompt yet</p>
      <% end %>
    </div>

      </div>
  </div>
</div>
