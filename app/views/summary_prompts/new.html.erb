<h1 class="text-center mb-4">Create a new summary prompt</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card p-4 shadow-sm mb-4">
        <%= simple_form_for @summary_prompt do |f| %>
          <%= f.input :name, label: "Title" %>
          <%= f.input :content, label: "Prompt" %>

          <div class="text-center mt-3">
            <%= f.submit "Add prompt", class: "btn btn-primary btn-lg px-4" %>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <%= link_to "Back", summary_prompts_path, class: "btn btn-outline-secondary" %>
      </div>

    </div>
  </div>
</div>
