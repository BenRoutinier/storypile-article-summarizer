<div class="container my-4">
  <h1 class="text-center mb-4">All articles tagged "<%= @tag %>"</h1>

  <% if @articles.any? %>
    <div class="row g-3">
      <%= render "shared/manyarticles", articles: @articles %>
    </div>
  <% else %>
    <p class="text-center text-muted">No articles found with this tag.</p>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "â† Back to Articles", articles_path, class: "btn btn-secondary" %>
  </div>
</div>
